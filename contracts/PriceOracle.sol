contract PriceOracle is IPriceOracle, CoreRef {
    using Decimal for Decimal.D256;

    event TWAPDurationUpdate(uint256 _duration);
    event Update(address pair, uint256 _peg);

    IUniswapV2Pair public pair0;
    IUniswapV2Pair public pair1;

    mapping(address => bool) private isPrice0;

    /// @notice the previous cumulative price of the oracle snapshot
    mapping(address => uint256) public priorCumulative;

    /// @notice the previous timestamp of the oracle snapshot
    mapping(address => uint32) public priorTimestamp;

    mapping(address => Decimal.D256) public twap;

    /// @notice the window over which the initial price will "thaw" to the true peg price
    uint256 public duration;

    uint256 private constant FIXED_POINT_GRANULARITY = 2**112;

    /// @notice UniswapOracle constructor
    /// @param _pair0 Uniswap Pair pair0 for pstake-Eth pair to provide TWAP of pstake
    /// @param _pair1 Uniswap Pair pair1 for stkEth-Eth pair to provide TWAP of stkEth
    /// @param _isPrice00 flag for using token0 or token1 for cumulative on Uniswap pair0
    /// @param _isPrice01 flag for using token0 or token1 for cumulative on Uniswap pair1
    /// @param _duration TWAP duration
    constructor(
        address _core,
        address _pair0,
        address _pair1,
        bool _isPrice00,
        bool _isPrice01,
        uint256 _duration
    ) CoreRef(_core) {
        pair0 = IUniswapV2Pair(_pair0);
        pair1 = IUniswapV2Pair(_pair1);
        // Relative to USD per ETH price
        isPrice0[_pair0] = _isPrice00;
        isPrice0[_pair1] = _isPrice01;
        duration = _duration;

        _init(_pair0);
        _init(_pair1);
    }

    function updatePairs() public {
        update(address(pair0));
        update(address(pair1));
    }

    /// @notice updates the oracle price
    function update(address pair) public {
        (
            uint256 price0Cumulative,
            uint256 price1Cumulative,
            uint32 currentTimestamp
        ) = UniswapV2OracleLibrary.currentCumulativePrices(pair);

        uint32 deltaTimestamp;
        unchecked {
            deltaTimestamp = currentTimestamp - priorTimestamp[pair]; // allowing underflow per Uniswap Oracle spec
        }

        if (deltaTimestamp < duration) {
            return;
        }

        uint256 currentCumulative = _getCumulative(pair, price0Cumulative, price1Cumulative);
        
        uint256 deltaCumulative;
        unchecked {
            deltaCumulative = (currentCumulative - priorCumulative[pair]); // allowing underflow per Uniswap Oracle spec
        } 

        // Uniswap stores cumulative price variables as a fixed point 112x112 so we need to divide out the granularity
        Decimal.D256 memory _twap =
            Decimal.ratio(
                deltaCumulative / deltaTimestamp,
                FIXED_POINT_GRANULARITY
            );
        twap[pair] = _twap;

        priorTimestamp[pair] = currentTimestamp;
        priorCumulative[pair] = currentCumulative;

        emit Update(pair, _twap.value);
    }

    /// @notice determine if read value is stale
    /// @return true if read value is stale
    function isOutdated(address pair) public view returns (bool) {
        (, , uint32 currentTimestamp) =
            UniswapV2OracleLibrary.currentCumulativePrices(pair);
        uint32 deltaTimestamp = currentTimestamp - priorTimestamp[pair]; // allowing underflow per Uniswap Oracle spec
        return deltaTimestamp >= duration;
    }

    // // 0x000000000000000000000000f9680d99d6c9589e2a93a78a04a279e509205945
    // /// @notice read the oracle price
    // /// @return oracle price
    // /// @return true if price is valid
    // /// @dev price is to be denominated in USD per X where X can be ETH, etc.
    // /// @dev Can be innacurate if outdated, need to call `isOutdated()` to check
    // function read() public view returns (Decimal.D256 memory, bool) {
    //     bool valid = !twap.isZero();
    //     return (twap, valid);
    // }

    function price() external override returns(uint256) {

        uint256 pstakeEthPrice = pairPrice(address(pair0));
        uint256 stkEthPrice = pairPrice(address(pair1));

        // pstake price in terms of stkEth = pstakeEthPrice/stkEthPrice

        return pstakeEthPrice*1e18/stkEthPrice;
    }

    function pairPrice(address pair) public returns (uint256) {
        if(isOutdated(pair)){
            update(pair);
        }

        return twap[pair].value;
    }


    /// @notice set a new duration for the TWAP window
    function setDuration(uint256 _duration) external onlyGovernor {
        require(_duration != 0, "UniswapOracle: zero duration");

        duration = _duration;
        emit TWAPDurationUpdate(_duration);
    }

    function _init(address pair) internal {
        (
            uint256 price0Cumulative,
            uint256 price1Cumulative,
            uint32 currentTimestamp
        ) = UniswapV2OracleLibrary.currentCumulativePrices(pair);

        priorTimestamp[pair] = currentTimestamp;
        priorCumulative[pair] = _getCumulative(pair, price0Cumulative, price1Cumulative);
    }

    function _getCumulative(address pair, uint256 price0Cumulative, uint256 price1Cumulative)
        internal
        view
        returns (uint256)
    {
        return isPrice0[pair] ? price0Cumulative : price1Cumulative;
    }
}
